<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  ***************  COLORS  ***************  -->
    <attr format="color" name="btn_background"/>
    <attr format="color" name="text_no_bg"/>
    <attr format="color" name="text_with_bg"/>
    <attr format="color" name="btn_clear_clicked"/>
    <attr format="color" name="primary_main_color"/>
    <attr format="color" name="secondary_main_color"/>

    <!--  ***************  STYLES  ***************  -->
    <!--  Margins  -->
    <style name="use_margin"/>

    <style name="use_margin.top">
        <item name="android:layout_marginTop">@dimen/normal_margin</item>
    </style>
    <style name="use_margin.bottom">
        <item name="android:layout_marginBottom">@dimen/normal_margin</item>
    </style>

    <!--  Activity  -->
    <style name="activity_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/normal_margin</item>
        <item name="android:paddingTop">0dp</item>
    </style>

    <style name="activity_style.background">
        <item name="android:background">?attr/colorOnBackground</item>
    </style>

    <style name="activity_background">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/ic_launcher_foreground</item>
        <item name="android:alpha">0.2</item>
        <item name="contentDescription">Background</item>
    </style>

    <!--  Containers  -->
    <style name="container" parent="use_margin.top">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:showDividers">middle</item>
        <item name="android:divider">@drawable/divider</item>
    </style>

    <style name="container.centered" parent="container">
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="container.table" parent="container">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="container.table.row" parent="container">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <!--  Button  -->
    <style name="btn_style" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/round_btn</item>
        <item name="android:textSize">@dimen/text_size_btn</item>
        <item name="android:textColor">?attr/text_with_bg</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="btn_style.clear" parent="btn_style">
        <item name="android:background">#00ffffff</item>
        <item name="android:textColor">?attr/text_no_bg</item>
    </style>

    <!--  Text View  -->
    <style name="txtv_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_txtv</item>
    </style>

    <style name="txtv_style.title">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="txtv_style.subtitle">
        <item name="android:textStyle">bold</item>
    </style>

    <!--  Edit Text  -->
    <style name="etxt_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_etxt</item>
        <item name="minHeight">50dp</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:minLines">1</item>
        <!--    Remove background    -->
        <item name="android:background"></item>
    </style>

    <!--  FloatingButton  -->
    <style name="floating_btn_style">
        <item name="borderWidth">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--  Spinner -->
    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--  DatePicker  -->
    <style name="date_picker_style">
        <item name="android:layout_gravity">center</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <!--  Btns color: <item name="colorPrimary"></item>-->
        <!--  Selection circle color <item name="colorAccent"></item>-->
    </style>

    <!--  TimePicker  -->
    <style name="time_picker_style">
        <item name="android:layout_gravity">center</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <!--  Btns color: <item name="colorPrimary"></item>-->
        <!--  Selection circle color <item name="colorAccent"></item>-->
    </style>
</resources>
